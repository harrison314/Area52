{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Area52Setup": {
    "LogView": {
      "MaxLogShow": 150,
      "DistributionMaxHourTimeInterval": "2.00:00:00",
      "DistributionMaxTimeInterval": "62.00:00:00"
    },
    "MaxErrorInClefBatch": null,

    "Features": {
      "BackgroundProcessing": true,
      "ClefEndpoint": true,
      "TimeSeries": true
    }
  },
  "RavenDbSetup": {
    "Database": {
      "Urls": [ "http://127.0.0.1:8080/" ],
      "DatabaseName": "Area52Db",
      "CertPath": null,
      "CertPass": null
    }
  },
  "MongoDbSetup": {
    "Database": {
      "ConnectionString": "mongodb://localhost:27017",
      "DatabaseName": "Area52Db"
    }
  },
  //"StorageType": "MongoDB",
  "StorageType": "RavenDB",
  "TimeSeriesSetup": {
    "StartupDelay": "00:00:15",
    "CheckNewDataInterval": "00:01:00",
    "FindDataBeforeInterval": "00:02:00",
    "RemoveOldData": false,
    "RemoveLogsAdDaysOld": 60
  },
  "ArchiveSetup": {
    "Enabled": false,
    "CheckInterval": "00:30:00",
    "RemoveLogsAdDaysOld": 60
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Information",
        "System": "Debug",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "bin/Area52.log.txt",
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} [{SourceContext}]{NewLine}{Exception}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName" ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": { "maximumDestructuringDepth": 4 }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": { "maximumStringLength": 100 }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": { "maximumCollectionCount": 10 }
      }
    ],
    "Properties": {
      "Instance": "Area52_d1i1"
    }
  }
}
